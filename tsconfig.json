{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": [
      "es6",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ],
      "@server/*": [
        "./server/*"
      ]
    },
    "types": [
      "@nuxt/types",
      "@types/node",
      "@types/crypto-js",
      "@nuxtjs/auth-next"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.vue",
    "server/**/*",
    "types/shims-global.d.ts",
    "types/shims-module.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "vueCompilerOptions": {
    "experimentalDisableTemplateSupport": true
  }
}